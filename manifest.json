{
  "manifest_version": 2,
  "name": "CacheBrowser",
  "description": "Browsing through the Google cache",
  "version": "1.0",
  "background": {
    "page": "main.html"
  },
  "content_scripts": [
    {
      "js": [
        "jquery-1.11.3.min.js", "popup.js"
      ],
      "css": [
        "error.css"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "exclude_globs": [
        "*://www.google.*",
        "*://webcache.googleusercontent.com/*"
      ]
    }
  ],

  "browser_action": {
    "default_popup": "popup.html"
  },

  "permissions" : [
    "tabs"
  ]
}
