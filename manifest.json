{
  "manifest_version": 2,
  "name": "CacheBrowser",
  "icons": {
    "128": "icons/globe39-128.png",
    "16": "icons/globe39.png"
  },
  "description": "Browsing through the Google cache",
  "version": "1.0",
  "background": {
    "scripts": ["js/redirect.js"]
  },
  "content_scripts": [
    {
      "js": [
        "js/lib/jquery-1.11.3.min.js", "js/lib/notify.min.js", "js/cache.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "exclude_globs": [
        "*://www.google.*",
        "*://webcache.googleusercontent.com/*"
      ]
    }
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Cache Browser"
  },

  "permissions" : [
    "tabs",
    "storage"
  ]
}
